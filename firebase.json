{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {"source": "**", "destination": "/index.html"}
    ]
  },
  "functions": {
    "predeploy": [
      "yarn --prefix \"$RESOURCE_DIR\" lint",
      "yarn --prefix \"$RESOURCE_DIR\" build"
    ]
  }
}
